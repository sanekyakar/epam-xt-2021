@using UserAwards.PL.WEB.Modules
@using Newtonsoft.Json
@using Newtonsoft.Json.Converters
@{
    Layout = "~/_AuthLayout.cshtml";

    var WebPL = new WebUserAwardsPL();
    Guid guid;
    Guid.TryParse(Request["id"], out guid);
    var user = WebPL.GetUserById(guid);

    var json = JsonConvert.SerializeObject(user, new IsoDateTimeConverter() { DateTimeFormat = "yyyy-MM-dd" });

    Response.Write(json);
}